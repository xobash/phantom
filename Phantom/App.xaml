<Application x:Class="Phantom.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:vm="clr-namespace:Phantom.ViewModels"
             xmlns:views="clr-namespace:Phantom.Views"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <Color x:Key="BgColor">#FF1E1E1E</Color>
        <Color x:Key="CardColor">#FF2B2B2B</Color>
        <Color x:Key="BorderColor">#FF3D3D3D</Color>

        <SolidColorBrush x:Key="BgBrush" po:Freeze="False" Color="{StaticResource BgColor}"/>
        <SolidColorBrush x:Key="CardBrush" po:Freeze="False" Color="{StaticResource CardColor}"/>
        <SolidColorBrush x:Key="BorderBrush" po:Freeze="False" Color="{StaticResource BorderColor}"/>

        <SolidColorBrush x:Key="AppBgBrush" po:Freeze="False" Color="#141414"/>
        <SolidColorBrush x:Key="ShellBrush" po:Freeze="False" Color="#1B1B1B"/>
        <SolidColorBrush x:Key="ShellAltBrush" po:Freeze="False" Color="#202020"/>
        <SolidColorBrush x:Key="DarkCardBrush" po:Freeze="False" Color="#262626"/>
        <SolidColorBrush x:Key="DarkCard2Brush" po:Freeze="False" Color="#2B2B2B"/>
        <SolidColorBrush x:Key="DarkBorderBrush" po:Freeze="False" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="DarkTextBrush" po:Freeze="False" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="MutedTextBrush" po:Freeze="False" Color="#CECECE"/>
        <SolidColorBrush x:Key="AccentBrush" po:Freeze="False" Color="#6C6C6C"/>
        <SolidColorBrush x:Key="AccentBorderBrush" po:Freeze="False" Color="#8A8A8A"/>

        <SolidColorBrush x:Key="NavItemBackgroundBrush" po:Freeze="False" Color="#262626"/>
        <SolidColorBrush x:Key="NavItemHoverBrush" po:Freeze="False" Color="#2E2E2E"/>
        <SolidColorBrush x:Key="NavItemSelectedBrush" po:Freeze="False" Color="#373737"/>
        <SolidColorBrush x:Key="NavItemBorderBrush" po:Freeze="False" Color="#444444"/>

        <SolidColorBrush x:Key="InputBackgroundBrush" po:Freeze="False" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" po:Freeze="False" Color="#303030"/>
        <SolidColorBrush x:Key="RowBackgroundBrush" po:Freeze="False" Color="#252525"/>
        <SolidColorBrush x:Key="RowAltBackgroundBrush" po:Freeze="False" Color="#2B2B2B"/>
        <SolidColorBrush x:Key="RowHoverBackgroundBrush" po:Freeze="False" Color="#333333"/>
        <SolidColorBrush x:Key="RowSelectedBackgroundBrush" po:Freeze="False" Color="#3D3D3D"/>

        <SolidColorBrush x:Key="TerminalBackgroundBrush" po:Freeze="False" Color="#000000"/>
        <SolidColorBrush x:Key="TerminalForegroundBrush" po:Freeze="False" Color="#E6E6E6"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="Window">
            <Setter Property="Background" Value="{DynamicResource ShellAltBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="Control">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="{DynamicResource DarkCardBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style TargetType="Border" x:Key="DarkCardStyle">
            <Setter Property="Background" Value="{DynamicResource DarkCardBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource DarkCard2Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" CornerRadius="7" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource RowHoverBackgroundBrush}"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource NavItemSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BtnBorder" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}"/>

        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource DarkTextBoxStyle}"/>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource RowHoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource RowSelectedBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            </Style.Resources>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource DarkComboBoxStyle}"/>

        <Style x:Key="DarkCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style TargetType="CheckBox" BasedOn="{StaticResource DarkCheckBoxStyle}"/>


        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track" CornerRadius="12" Background="{DynamicResource InputBackgroundBrush}" BorderBrush="{DynamicResource DarkBorderBrush}" BorderThickness="1"/>
                            <Ellipse x:Name="Thumb" Width="18" Height="18" Fill="{DynamicResource MutedTextBrush}" Margin="3,0,0,0" HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#1FA3E2"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#1FA3E2"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleSwitchCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <Border x:Name="Track"
                                    CornerRadius="12"
                                    Background="{DynamicResource InputBackgroundBrush}"
                                    BorderBrush="{DynamicResource DarkBorderBrush}"
                                    BorderThickness="1"/>
                            <Ellipse x:Name="Thumb"
                                     Width="18"
                                     Height="18"
                                     Fill="{DynamicResource MutedTextBrush}"
                                     Margin="3,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#1FA3E2"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#1FA3E2"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.45"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>

        <Style x:Key="DarkDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,7"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="17"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource RowSelectedBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource RowBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{DynamicResource RowAltBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource RowHoverBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource RowSelectedBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Foreground" Value="{DynamicResource DarkTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource DarkCard2Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="HorizontalGridLinesBrush" Value="Transparent"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DarkDataGridHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DarkDataGridCellStyle}"/>
            <Setter Property="RowStyle" Value="{StaticResource DarkDataGridRowStyle}"/>
        </Style>

        <Style TargetType="DataGrid" BasedOn="{StaticResource DarkDataGridStyle}"/>

        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AppsViewModel}">
            <views:AppsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ServicesViewModel}">
            <views:ServicesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StoreViewModel}">
            <views:StoreView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TweaksViewModel}">
            <views:TweaksView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FeaturesViewModel}">
            <views:FeaturesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FixesViewModel}">
            <views:FixesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UpdatesViewModel}">
            <views:UpdatesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AutomationViewModel}">
            <views:AutomationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LogsAboutViewModel}">
            <views:LogsAboutView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
