<Window x:Class="Phantom.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Phantom"
        Height="900"
        Width="1500"
        Background="{DynamicResource AppBgBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="430"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource ShellBrush}" BorderBrush="{DynamicResource DarkBorderBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Phantom" FontSize="38" FontWeight="SemiBold" Margin="16,14,16,14" Foreground="{DynamicResource DarkTextBrush}"/>

                <ListBox ItemsSource="{Binding Navigation}" SelectedItem="{Binding SelectedNavigation}" Margin="12"
                         BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" CornerRadius="10" Padding="10" Background="{DynamicResource NavItemBackgroundBrush}" BorderBrush="{DynamicResource NavItemBorderBrush}" BorderThickness="1">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource NavItemHoverBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource NavItemSelectedBrush}"/>
                                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" FontSize="18" Width="24" VerticalAlignment="Center" Foreground="{DynamicResource MutedTextBrush}"/>
                                <TextBlock Text="{Binding Label}" FontSize="16" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="{DynamicResource DarkTextBrush}"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" Margin="12" Style="{StaticResource DarkCardStyle}" Background="{DynamicResource ShellAltBrush}">
            <ContentControl Content="{Binding CurrentSectionViewModel}"/>
        </Border>

        <Border Grid.Column="2" Margin="0" BorderBrush="{DynamicResource DarkBorderBrush}" BorderThickness="1,0,0,0" Background="{DynamicResource TerminalBackgroundBrush}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
                    <Button Content="Cancel" Width="86" Margin="4" Command="{Binding CancelCurrentOperationCommand}" Style="{StaticResource DarkButtonStyle}"/>
                    <Button Content="Copy Log" Width="96" Margin="4" Command="{Binding CopyLogCommand}" Style="{StaticResource DarkButtonStyle}"/>
                    <Button Content="Open Logs Folder" Width="146" Margin="4" Command="{Binding OpenLogsFolderCommand}" Style="{StaticResource DarkButtonStyle}"/>
                </StackPanel>
                <RichTextBox Name="ConsoleTextBox"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="{DynamicResource TerminalBackgroundBrush}"
                             Foreground="{DynamicResource TerminalForegroundBrush}"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="14"
                             Margin="8"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
