<Window x:Class="Phantom.Views.RebootPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reboot Required"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="{DynamicResource ShellAltBrush}">
    <Border Margin="12"
            Width="460"
            Padding="14"
            CornerRadius="10"
            Background="{DynamicResource DarkCardBrush}"
            BorderBrush="{DynamicResource DarkBorderBrush}"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="An operation requires reboot."
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource DarkTextBrush}"/>
            <TextBlock Text="Choose an option:"
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MutedTextBrush}"/>
            <WrapPanel HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Width="140"
                        Margin="4"
                        Content="Reboot now"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="RebootNow_Click"/>
                <Button Width="180"
                        Margin="4"
                        Content="I'll do it myself"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Later_Click"/>
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
