<Window x:Class="Phantom.Views.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dangerous Operation"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="{DynamicResource ShellAltBrush}">
    <Border Margin="12"
            Width="430"
            Padding="14"
            CornerRadius="10"
            Background="{DynamicResource DarkCardBrush}"
            BorderBrush="{DynamicResource DarkBorderBrush}"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="{Binding PromptText}"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource DarkTextBrush}"/>
            <TextBlock Text="Type Y to continue."
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MutedTextBrush}"/>
            <TextBox Margin="0,12,0,0"
                     Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource DarkTextBoxStyle}"/>
            <WrapPanel HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Width="100"
                        Margin="4"
                        Content="Proceed"
                        IsDefault="True"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Proceed_Click"/>
                <Button Width="100"
                        Margin="4"
                        Content="Cancel"
                        IsCancel="True"
                        Style="{StaticResource DarkButtonStyle}"/>
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
