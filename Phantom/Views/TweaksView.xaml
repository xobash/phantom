<UserControl x:Class="Phantom.Views.TweaksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource AppBgBrush}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="TweakChevronButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Background" Value="{DynamicResource RowHoverBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ChevronBg"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Path x:Name="ChevronPath"
                                      Width="10"
                                      Height="7"
                                      Stretch="Fill"
                                      Stroke="{DynamicResource DarkTextBrush}"
                                      StrokeThickness="1.8"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Data="M 1 1 L 5 5 L 9 1"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ChevronPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ChevronBg" Property="Background" Value="{DynamicResource NavItemSelectedBrush}"/>
                                <Setter TargetName="ChevronBg" Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ChevronBg" Property="Background" Value="{DynamicResource RowSelectedBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource AppBgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DarkCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="340"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Tweaks" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource DarkTextBrush}"/>
                    <TextBlock Margin="0,4,0,0"
                               Foreground="{DynamicResource MutedTextBrush}"
                               Text="Use grouped sections. Toggling a switch applies or undoes the tweak immediately."/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBoxStyle}"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Refresh status" Command="{Binding RefreshStatusCommand}" Style="{StaticResource DarkButtonStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                        <CheckBox IsChecked="{Binding DryRun}" Style="{StaticResource ToggleSwitchCheckBoxStyle}"/>
                        <TextBlock Text="Dry-run" Margin="8,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource DarkCardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Sections}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    CornerRadius="10"
                                    BorderBrush="{DynamicResource DarkBorderBrush}"
                                    BorderThickness="1"
                                    Background="{DynamicResource DarkCard2Brush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Padding="10,8" Background="{DynamicResource DarkCard2Brush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="{DynamicResource MutedTextBrush}" FontSize="14"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,12,0"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Text="{Binding Tweaks.Count, StringFormat={}{0}}"/>
                                            <ToggleButton Grid.Column="2"
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                          Style="{StaticResource TweakChevronButtonStyle}"/>
                                        </Grid>
                                    </Border>

                                    <ItemsControl Grid.Row="1"
                                                  Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                  ItemsSource="{Binding Tweaks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource DarkBorderBrush}" BorderThickness="0,1,0,0" Padding="10,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                                            <TextBlock Text="{Binding Name}" FontSize="17" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       Margin="0,2,0,0"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,16,0"
                                                                   Text="{Binding Status}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource MutedTextBrush}"/>

                                                        <CheckBox Grid.Column="2"
                                                                  VerticalAlignment="Center"
                                                                  IsChecked="{Binding Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  Click="OnTweakToggleClick"
                                                                  Style="{StaticResource ToggleSwitchCheckBoxStyle}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <TextBlock Grid.Row="2"
                   Margin="10,2,10,0"
                   Foreground="{DynamicResource MutedTextBrush}"
                   Text="Dangerous or non-reversible tweaks still require explicit confirmation (Y)."/>
    </Grid>
</UserControl>
