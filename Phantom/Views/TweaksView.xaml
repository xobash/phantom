<UserControl x:Class="Phantom.Views.TweaksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource AppBgBrush}">
    <Grid Background="{DynamicResource AppBgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DarkCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="340"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Tweaks" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource DarkTextBrush}"/>
                    <TextBlock Margin="0,4,0,0"
                               Foreground="{DynamicResource MutedTextBrush}"
                               Text="Use grouped sections. Toggling a switch applies or undoes the tweak immediately."/>
                </StackPanel>

                <TextBox Grid.Column="1"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBoxStyle}"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Refresh status" Command="{Binding RefreshStatusCommand}" Style="{StaticResource DarkButtonStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                        <CheckBox IsChecked="{Binding DryRun}" Style="{StaticResource ToggleSwitchCheckBoxStyle}"/>
                        <TextBlock Text="Dry-run" Margin="8,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource DarkCardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Sections}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    CornerRadius="10"
                                    BorderBrush="{DynamicResource DarkBorderBrush}"
                                    BorderThickness="1"
                                    Background="{DynamicResource DarkCard2Brush}">
                                <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                                    <Expander.Header>
                                        <Grid Margin="8,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="{DynamicResource MutedTextBrush}" FontSize="14"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,4,0"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Text="{Binding Tweaks.Count, StringFormat={}{0}}"/>
                                        </Grid>
                                    </Expander.Header>

                                    <ItemsControl ItemsSource="{Binding Tweaks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource DarkBorderBrush}" BorderThickness="0,1,0,0" Padding="10,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                                            <TextBlock Text="{Binding Name}" FontSize="17" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       Margin="0,2,0,0"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,16,0"
                                                                   Text="{Binding Status}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource MutedTextBrush}"/>

                                                        <CheckBox Grid.Column="2"
                                                                  VerticalAlignment="Center"
                                                                  IsChecked="{Binding Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  Click="OnTweakToggleClick"
                                                                  Style="{StaticResource ToggleSwitchCheckBoxStyle}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <TextBlock Grid.Row="2"
                   Margin="10,2,10,0"
                   Foreground="{DynamicResource MutedTextBrush}"
                   Text="Dangerous or non-reversible tweaks still require explicit confirmation (Y)."/>
    </Grid>
</UserControl>
